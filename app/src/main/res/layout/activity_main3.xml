<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="651dp"
        android:layout_height="277dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="25dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/road" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="274dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="29dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/finish" />

    <ImageView
        android:id="@+id/car1_img"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="78dp"
        android:layout_marginEnd="531dp"
        android:layout_marginRight="531dp"
        android:layout_marginBottom="221dp"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/car1" />

    <ImageView
        android:id="@+id/car2_img"
        android:layout_width="174dp"
        android:layout_height="124dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_centerInParent="true"
        android:layout_marginStart="43dp"
        android:layout_marginLeft="43dp"
        android:layout_marginTop="211dp"
        android:layout_marginEnd="516dp"
        android:layout_marginRight="516dp"
        android:layout_marginBottom="78dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/car2" />

    <Button
        android:id="@+id/button"
        android:layout_width="101dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:onClick="onMyButtonClick"
        android:text="Start"
        app:backgroundTint="#FF0000" />

    <Button
        android:id="@+id/button_drive"
        android:layout_width="123dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="364dp"
        android:layout_marginLeft="364dp"
        android:layout_marginBottom="6dp"
        android:longClickable="true"
        android:text="Drive"
        app:backgroundTint="#8BC34A" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="46sp" />
</RelativeLayout>